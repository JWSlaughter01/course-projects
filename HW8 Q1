INCLUDE Irvine32.inc
;Author: John Slaughter
;Date: 12/05/2024
;Desc: Ch8 Short Exercise 1
.386
.model flat,stdcall
.stack 4096

.data
set1 BYTE 1, 2, 3
set2 BYTE 4, 5, 6
set3 BYTE 7, 8, 9
messs BYTE "Sum: ",0


ExitProcess proto, dwExitCode:dword
.code
main PROC


;write assembly code here
;set1
mov esi, offset set1
call AddThree
mov edx, OFFSET messs
call WriteString
call WriteDec
call Crlf

;set2
mov esi, offset set2
call AddThree
mov edx, OFFSET messs
call WriteString
call WriteDec
call Crlf

;set3
mov esi, offset set3
call AddThree
mov edx, OFFSET messs
call WriteString
call WriteDec
call Crlf


INVOKE ExitProcess,0
main ENDP

AddThree PROC
mov al, [esi]
add esi, 1
add al, [esi]
add esi, 1
add al, [esi]

movzx eax, al

ret
AddThree ENDP

END main
