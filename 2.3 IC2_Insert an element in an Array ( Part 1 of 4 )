int findId(int, int [], int);
void insertId(int, int [], int);

int main()
{
    const int MAX_SIZE = 100;

    int sid[MAX_SIZE] = { 1, 3, 6, 8, 10};
    int index, id;
 

    // To insert more numbers
      int num, size = 5;
