      cin >> num;
      //cout << "Enter the student ids: ";

     /*
     Enter your code
     */
     //check
     for (int i = 0; i < num; i++) {
       cin >> id;
       index = findId(id, sid, size);
       if (index == -1) {
         cout << id << " not found" << endl;
         insertId(id, sid, size);
         size++;
       } else {
          //cout << id << " found at position " << 
       }
     }
     
   cout << "The array with all the elements inserted are: ";
   /*
     Enter your code
     */
     for (int i = 0; i < size; i++) {
        cout << sid[i] << " ";
     }

}

// should return the index of val if it is present in the array
// otherwise return -1
int findId(int val, int arrId[], int sz)
{
   /*
     Enter your code
     */
     for (int i = 0; i < sz; i++) {
        if (arrId[i] == val) {
           cout << val << " found at position " << i << endl;
           return i;
        }
     }
     return -1;
}

void insertId(int val, int arrId[], int sz)
{
   /*
     Enter your code
     */
     //I did too simple of code the first time around, it wants inserted dependent on the value
     //arrId[sz] = val;
     int i;
     for (i = 0; i < sz; i++) {
        if (val < arrId[i]) {
           break;
        }
     }
     //we have right position for insertion
     for (int j = sz; j >= i; j--) {
        arrId[j+1] = arrId[j];
     }
     arrId[i] = val;
     cout << val << " inserted into the array" << endl;
     //outputs look idential, I don't know what zybooks sees as wrong
   
}
